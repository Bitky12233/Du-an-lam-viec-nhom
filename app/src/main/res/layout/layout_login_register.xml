<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_register"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/icon_engteam"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo_engstudy" />

    <Button
        android:id="@+id/loginButton_home"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edittext15"
        android:backgroundTint="@color/white"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="#14CC60"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerButton_home"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_edittext15"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>