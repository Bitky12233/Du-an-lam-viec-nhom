<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High score"
        android:gravity="center"
        android:textColor="#29BF12"
        android:textSize="50dp"
        android:padding="30dp"
        android:id="@+id/hgihcore"
        android:textStyle="bold"

        android:textAlignment="center"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/hgihcore"
        android:id="@+id/TxtHighscore"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/TxtHighscore"
        android:id="@+id/TxtHigh2"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/TxtHigh2"
        android:id="@+id/TxtHigh3"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/TxtHigh3"
        android:id="@+id/TxtHigh4"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/TxtHigh4"
        android:id="@+id/TxtHigh5"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:gravity="center"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/btn_green_radius_100"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
         />

</LinearLayout>