<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ravenpro_medium"
        android:text="INSTRUCTIONS"
        android:textColor="#29BF12"
        android:textSize="34sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_correctInstruction"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/eng_quiz_instruction" />

    <Button
        android:id="@+id/btn_QuizBack_Instruc"
        android:layout_marginTop="15dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_below="@+id/img_correctInstruction"
        android:background="@drawable/btn_green_radius_100"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</LinearLayout>